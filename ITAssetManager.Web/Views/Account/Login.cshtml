@model ITAssetManager.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">IT Asset Manager</h2>
                        <p class="text-muted">Sign in to your account</p>
                    </div>

                    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right"></i> Sign In
                        </button>
                    </form>

                    <hr />

                   @*  <div class="alert alert-info mt-4">
                        <strong>Demo Accounts:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Admin:</strong> admin@codeinnovators.com / Admin@123</li>
                            <li><strong>Developer:</strong> developer@codeinnovators.com / Dev@123</li>
                            <li><strong>Staff:</strong> staff@codeinnovators.com / Staff@123</li>
                        </ul>
                    </div> *@
                </div>
            </div>

            <div class="text-center mt-3 text-muted">
                <small>© 2025 Code Innovators</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, var(--ci-navy) 0%, var(--ci-teal) 100%);
        min-height: 100vh;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .btn-primary {
        padding: 0.75rem;
        font-weight: 600;
    }
</style>
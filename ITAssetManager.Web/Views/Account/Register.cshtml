@model ITAssetManager.Web.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register New User";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <h2 class="mb-4">Register New User</h2>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="user@codeinnovators.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" placeholder="Minimum 6 characters" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="text-muted">Must contain uppercase, lowercase, and digit</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Role" class="form-label"></label>
                                <select asp-for="Role" class="form-select">
                                    <option value="Administrator">Administrator</option>
                                    <option value="Developer">Developer</option>
                                    <option value="GeneralStaff" selected>General Staff</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                                <small class="text-muted d-block mt-1">
                                    <strong>Administrator:</strong> Full access<br />
                                    <strong>Developer:</strong> Technical access<br />
                                    <strong>General Staff:</strong> View and edit access
                                </small>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Create User
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@* Views/Backup/Index.cshtml *@
@model List<string>

@{
    ViewData["Title"] = "Database Backups";
}

<div class="container mt-4">
    <h2>Database Backups</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="CreateBackup" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-database"></i> Create Backup Now
                </button>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="CleanupBackups" method="post">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-trash"></i> Clean Up Old Backups (30+ days)
                </button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Existing Backups</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="list-group">
                    @foreach (var backupFile in Model)
                    {
                        var fileName = System.IO.Path.GetFileName(backupFile);
                        var fileInfo = new System.IO.FileInfo(backupFile);
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@fileName</strong><br>
                                <small class="text-muted">
                                    Created: @fileInfo.CreationTime.ToString("yyyy-MM-dd HH:mm") |
                                    Size: @((fileInfo.Length / 1024f / 1024f).ToString("0.00")) MB
                                </small>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No backup files found. Create your first backup using the button above.</p>
            }
        </div>
    </div>
</div>

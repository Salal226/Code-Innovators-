@model IEnumerable<ITAssetManager.Web.Models.ViewModels.SoftwareProductListVm>

<!-- Move the "New Product" button above the table -->
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success btn-sm">+ New Product</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Vendor</th>
            <th>Version</th>
            <th>Licenses</th>        @* was LicensesCount *@
            <th>Total Seats</th>
            <th>In Use</th>          @* was SeatsInUse *@
            <th>Next Expiry</th>
            <th>Actions</th>         @* Added header for action buttons *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Vendor</td>
                <td>@item.Version</td>
                <td>@item.Licenses</td>
                <td>@item.TotalSeats</td>
                <td>@item.InUse</td>
                <td>@(item.NextExpiry.HasValue? item.NextExpiry.Value.ToString("yyyy-MM-dd") : "-")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model ITAssetManager.Web.Models.SoftwareProduct
@{
    ViewData["Title"] = "Software Product Details";
}

<h2 class="mb-3">Software Product Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Vendor</dt>
            <dd class="col-sm-9">@(Model.Vendor ?? "N/A")</dd>

            <dt class="col-sm-3">Version</dt>
            <dd class="col-sm-9">@(Model.Version ?? "N/A")</dd>

            <dt class="col-sm-3">Unit Cost</dt>
            <dd class="col-sm-9">@(Model.UnitCost?.ToString("C") ?? "N/A")</dd>

            <dt class="col-sm-3">Seats</dt>
            <dd class="col-sm-9">@Model.SeatCount</dd>

            <dt class="col-sm-3">Seats In Use</dt>
            <dd class="col-sm-9">@Model.SeatsInUse</dd>

            <dt class="col-sm-3">License Expiry</dt>
            <dd class="col-sm-9">
                @if (Model.LicenseExpiry.HasValue)
                {
                    <span class="@(Model.LicenseExpiry.Value < DateTime.Today ? "text-danger" : Model.LicenseExpiry.Value <= DateTime.Today.AddDays(30) ? "text-warning" : "text-success")">
                        @Model.LicenseExpiry.Value.ToString("yyyy-MM-dd")
                    </span>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</div>

@if (Model.Assignments != null && Model.Assignments.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <h4 class="mb-0">Recent Assignments (@Model.Assignments.Count() total)</h4>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Assignment Date</th>
                        <th>Person</th>
                        <th>Asset</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.Assignments.OrderByDescending(x => x.AssignedOn).Take(10))
                    {
                        <tr>
                            <td>@(a.AssignedOn?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                            <td>@(a.Person?.FullName ?? "N/A")</td>
                            <td>@(a.Asset?.AssetTag ?? "N/A")</td>
                            <td>
                                <span class="badge @(a.IsActive ? "bg-success" : "bg-secondary")">
                                    @(a.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Assignments.Count() > 10)
            {
                <p class="text-muted mt-2">Showing 10 most recent assignments of @Model.Assignments.Count() total.</p>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        <h5>No Assignments</h5>
        <p class="mb-0">This software product has no license assignments yet.</p>
    </div>
}
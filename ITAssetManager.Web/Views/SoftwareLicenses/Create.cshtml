@model ITAssetManager.Web.Models.SoftwareLicense
@{
    ViewData["Title"] = "Create Software License";
}

<div class="container">
    <h2>Create Software License</h2>
    <hr />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Software Product Selection -->
        <div class="form-group mb-3">
            <label asp-for="SoftwareProductId" class="form-label">
                <i class="bi bi-box-seam"></i> Software Product
            </label>
            <select asp-for="SoftwareProductId" class="form-select" asp-items="ViewBag.SoftwareProductId">
                <option value="">-- Select Software Product --</option>
            </select>
            <span asp-validation-for="SoftwareProductId" class="text-danger"></span>
        </div>

        <!-- License Key -->
        <div class="form-group mb-3">
            <label asp-for="LicenseKey" class="form-label">
                <i class="bi bi-key"></i> License Key
            </label>
            <input asp-for="LicenseKey" class="form-control" placeholder="Enter license key" />
            <span asp-validation-for="LicenseKey" class="text-danger"></span>
        </div>

        <!-- Two Column Layout for Pricing and Seats -->
        <div class="row">
            <!-- Left Column: Pricing -->
            <div class="col-md-6">
                <h5 class="mt-3 mb-3">Pricing Information</h5>

                <!-- ✨ Cost Per Unit ✨ -->
                <div class="form-group mb-3">
                    <label asp-for="Cost" class="form-label">
                        <i class="bi bi-currency-dollar"></i> Cost Per Unit
                    </label>
                    <input asp-for="Cost" class="form-control" type="number" step="0.01"
                           id="costPerUnit" oninput="calculateTotal()" placeholder="0.00" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <!-- ✨ Total Cost (Auto-calculated) ✨ -->
                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="bi bi-calculator"></i> Total Cost
                    </label>
                    <input type="text" class="form-control" id="totalCost" readonly
                           style="background-color: #e9ecef; font-weight: bold;" value="$0.00" />
                    <small class="text-muted">Automatically calculated: Cost Per Unit × Seats Purchased</small>
                </div>
            </div>

            <!-- Right Column: Seat Management -->
            <div class="col-md-6">
                <h5 class="mt-3 mb-3">Seat Management</h5>

                <!-- ✨ Seats Purchased ✨ -->
                <div class="form-group mb-3">
                    <label asp-for="SeatsPurchased" class="form-label">
                        <i class="bi bi-people"></i> Seats Purchased
                    </label>
                    <input asp-for="SeatsPurchased" class="form-control" type="number"
                           id="seatsPurchased" oninput="calculateTotal()" placeholder="0" />
                    <span asp-validation-for="SeatsPurchased" class="text-danger"></span>
                </div>

                <!-- ✨ Seats In Use (SeatsAssigned) ✨ -->
                <div class="form-group mb-3">
                    <label asp-for="SeatsAssigned" class="form-label">
                        <i class="bi bi-person-check"></i> Seats In Use
                    </label>
                    <input asp-for="SeatsAssigned" class="form-control" type="number" placeholder="0" />
                    <span asp-validation-for="SeatsAssigned" class="text-danger"></span>
                    <small class="text-muted">Number of seats currently being used</small>
                </div>
            </div>
        </div>

        <!-- Date Information -->
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="PurchaseDate" class="form-label">
                        <i class="bi bi-calendar-check"></i> Purchase Date
                    </label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="ExpiryDate" class="form-label">
                        <i class="bi bi-calendar-x"></i> Expiry Date
                    </label>
                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- ✨ Assigned To Dropdown ✨ -->
        <div class="form-group mb-3">
            <label for="PersonId" class="form-label">
                <i class="bi bi-person-badge"></i> Assigned To
            </label>
            <select name="PersonId" id="PersonId" class="form-select" asp-items="ViewBag.PersonId">
                <option value="">-- Unassigned (Optional) --</option>
            </select>
            <small class="text-muted">Select a person to assign this license to (optional)</small>
        </div>

        <!-- Additional Information -->
        <div class="form-group mb-3">
            <label asp-for="Vendor" class="form-label">
                <i class="bi bi-building"></i> Vendor
            </label>
            <input asp-for="Vendor" class="form-control" placeholder="e.g., Microsoft, Adobe" />
            <span asp-validation-for="Vendor" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Notes" class="form-label">
                <i class="bi bi-journal-text"></i> Notes
            </label>
            <textarea asp-for="Notes" class="form-control" rows="3"
                      placeholder="Additional notes or comments"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Create License
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // ✨ Auto-calculate Total Cost ✨
        function calculateTotal() {
            var costPerUnit = parseFloat(document.getElementById('costPerUnit').value) || 0;
            var seatsPurchased = parseInt(document.getElementById('seatsPurchased').value) || 0;
            var totalCost = costPerUnit * seatsPurchased;

            // Format as currency
            document.getElementById('totalCost').value = '$' + totalCost.toFixed(2);
        }

        // Calculate on page load if values exist
        window.addEventListener('load', function() {
            calculateTotal();
        });
    </script>
}
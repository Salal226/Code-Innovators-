@model ITAssetManager.Web.Models.SoftwareLicense
@{
    ViewData["Title"] = "Edit Software License";
}

<div class="container my-4">
    <div class="card p-4">
        <h2 class="mb-3">Edit Software License</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="SoftwareProductId" class="form-label">Software Product</label>
                    <select asp-for="SoftwareProductId" class="form-select" asp-items="ViewBag.SoftwareProductId">
                        <option value="">-- Select Software Product --</option>
                    </select>
                    <span asp-validation-for="SoftwareProductId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LicenseKey" class="form-label">License Key</label>
                    <input asp-for="LicenseKey" class="form-control" />
                    <span asp-validation-for="LicenseKey" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="SeatsPurchased" class="form-label">Seats Purchased</label>
                    <input asp-for="SeatsPurchased" class="form-control" type="number" min="0" />
                    <span asp-validation-for="SeatsPurchased" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="SeatsAssigned" class="form-label">Seats Assigned</label>
                    <input asp-for="SeatsAssigned" class="form-control" type="number" min="0" />
                    <span asp-validation-for="SeatsAssigned" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Cost" class="form-label">Cost</label>
                    <input asp-for="Cost" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Vendor" class="form-label">Vendor</label>
                    <input asp-for="Vendor" class="form-control" />
                    <span asp-validation-for="Vendor" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
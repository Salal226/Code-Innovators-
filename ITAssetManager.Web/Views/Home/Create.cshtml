@model ITAssetManager.Web.Models.SoftwareProduct
@{
    ViewData["Title"] = "Create Software Product";
}
<h2>Create Software Product</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Vendor" class="form-label"></label>
        <input asp-for="Vendor" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="Version" class="form-label"></label>
        <input asp-for="Version" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="UnitCost" class="form-label"></label>
        <input asp-for="UnitCost" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="SeatCount" class="form-label"></label>
        <input asp-for="SeatCount" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="LicenseExpiry" class="form-label"></label>
        <input asp-for="LicenseExpiry" class="form-control" type="date" />
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

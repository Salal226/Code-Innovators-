@model ITAssetManager.Web.Models.SoftwareProduct
@{
    ViewData["Title"] = "Delete Software Product";
}

<h2 class="text-danger mb-3">Delete Software Product</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Name</strong> (@Model.Vendor @Model.Version)?
</div>

<dl class="row">
    <dt class="col-sm-3">Seats</dt>
    <dd class="col-sm-9">@Model.SeatCount</dd>

    <dt class="col-sm-3">Seats In Use</dt>
    <dd class="col-sm-9">@Model.SeatsInUse</dd>

    <dt class="col-sm-3">License Expiry</dt>
    <dd class="col-sm-9">@Model.LicenseExpiry?.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
